<table>
    <thead>
        <tr>
            <th>No</th> 
            <th>Title</th>
            <th>ISBN</th>
            <th>Stock</th>
            <th>Price</th>
            <th>Author</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <% books.forEach((book,i) => { %>
        <tr>
            <td><%= (i+1) %></td>
            <td><%= book.title %></td>
            <td><%= book.isbn %></td>
            <td><%= book.stock %></td>
            <td><%= book.price %></td>
            <td><%= book.author.name %></td>
            <td>
                <a href="/books/<%= book.id %>" class="btn btn-primary">Restock</a>
                <a href="/books/<%= book.id %>/edit" class="btn btn-danger">Delete</a>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>